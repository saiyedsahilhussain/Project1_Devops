pipeline {
    agent any

    environment {
        NODE_VERSION = '18'  // Specify Node.js version
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo/react-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'node -v || nvm install $NODE_VERSION'
                    sh 'npm install'
                }
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm run build'
            }
        }


    post {
        success {
            echo  ' Build and Deployment Successful!'
        }
        failure {
            echo ' Build or Deployment Failed!'
        }
    }
}

