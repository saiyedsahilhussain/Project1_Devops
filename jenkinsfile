pipeline {
    agent any

    environment {
        NODE_VERSION = '18'  // Specify Node.js version
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/saiyedsahilhussain/Project1_Devops.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'node -v || nvm install $NODE_VERSION'
                    sh 'npm install'
                }
            }
        }

        stage('Build React App') {
            steps {
                sh 'npm run build'
            }
        }
    } // ✅ Closing bracket added here

    post {
        success {
            echo '✅ Build and Deployment Successful!'
        }
        failure {
            echo '❌ Build or Deployment Failed!'
        }
    }
}
